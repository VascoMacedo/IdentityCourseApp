@model IEnumerable<AppUser>

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">User List </h2>
    </div>
</div>
<div class="p-4 border rounded">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    Email
                </th>
                <th>
                    Nickname
                </th>
                <th>
                    Roles
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.NickName
                    </td>
                    <td>
                        @item.Role
                    </td>                    
                </tr>
            }
        </table>
    }
</div>